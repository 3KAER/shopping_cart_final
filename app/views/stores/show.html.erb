 <section class="shop_section layout_padding">
    <div class="container">
      <div class="heading_container heading_center">
        <h2>
      
          
         <ul class="nav nav-tabs" id="myTab" role="tablist">
                                
                              <li class="nav-item">
                               Welcome to <%= @store.name %> shop <br/>
                               <%= @store.description %><br/>
                              <%= link_to "New products",products_new_path, class:"nav-link" %>
                                </li>
                            </ul>
     
        </h2>
      </div>
   
          
      <div class="row">
      <% @products.each do |product| %>
      <% if product.store_id == @store.id  %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <div class="box">
              <a href="">
              <div class="img-box">
              <%= image_tag(product.image, class: "card-img-top") if product.image.attached? %>
              </div>
              <div class="detail-box">
                <h6>
                  <%= product.title %>
                </h6>
                <h6>
                  Price
                  <span>
                    <%= product.price %>
                  </span>
                </h6>
              </div>
              <div class="new">
                <span>
                  New
                </span>
              </div>
            </a>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>
      
      
    </div>
    
  </section>
    