  <h1 class="title">Create Shop</h1>
        
        <%= form_with(model: @store, local: true)  do |form|  %>
        
            
        <div class="form-sign-up">
            <div class="mb-1 row">
                <label>Name store</label>
                 <%#= form.label :name %>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-12">
                    <%= form.text_field :name, class: "form-control", placeholder: "name" %>
                </div>
            </div>
            <div class="mb-1 row">
                <%= form.label :description %>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-12">
                    <%= form.text_field :description, class: "form-control", placeholder: "name@gmail.com" %>
                </div>
            </div>
            <div class="mb-1 row">
                <div class="col-sm-12">
                    <%= form.submit "Update store" , class: "btn btn-secondary max-width btn-border create-shop" %>
                </div>
            </div>
        </div>
        <% end %>